<% include include/header.ejs %>
	<div class="container login">
		<form action="/loginForm" method="post">
			<fieldset>
				<legend>로그인</legend>
		    	<label for="userId">아이디</label><input type="text" id="userId" value="1" name="username" autocomplete="off" placeholder="아이디" />
		    	<label for="userPw">비밀번호</label><input type="password" id="userPw" value="1" name="password" autocomplete="off" placeholder="비밀번호" />
		    	<input type="submit" class="btn" value="로그인" />
		    	<ul>
		        	<li><a href="#n">아이디</a>ㆍ<a href="#n">비밀번호 찾기</a></li>
		        	<li><a href="/join">회원가입</a></li>
				</ul>
			</fieldset>
		</form>
		<a href="/login/naver">네이버 아이디 로그인</a>
    </div>
    <script>
		$(function() {
			function validation() {
				if ($("#userId").val() === "") {
					$("#userId").focus();
					return;
				} if ($("#userPw").val() === "") {
					$("#userPw").focus();
					return;
				} 
				$("form").submit();
			}
			$("input").keydown(function(key) {
				if(key.keyCode == 13) validation();
			});
			$(".btn").click(function(e) {
				e.preventDefault();
				validation();
			});
		});
	</script>
